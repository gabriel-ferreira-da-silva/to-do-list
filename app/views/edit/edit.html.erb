<div style="display: flex; flex-direction: column; gap: 10px">
  <%= form_with url: update_edit_path(@tarefa["id"]), local: true do |form| %>
    <div class="input-group input-group-sm mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroup-sizing-sm"><%= form.label :name %></span>
        <%= form.text_field :name %>
      </div>
    </div>

    <div class="input-group input-group-sm mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroup-sizing-sm"><%= form.label :description %></span>
        <%= form.text_area :description %>
      </div>
    </div>

    <div class="input-group input-group-sm mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroup-sizing-sm"><%= form.label :priority %></span>
        <%= form.select :priority, options_for_select(['low', 'medium', 'high']) %>
      </div>
    </div>

