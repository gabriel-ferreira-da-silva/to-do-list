<%= form_with model: @tarefa,url: update_edit_path(@tarefa), local: true do |form| %>
  
  <div class="input-group input-group-sm mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroup-sizing-sm"><%= form.label :nome %></span>
